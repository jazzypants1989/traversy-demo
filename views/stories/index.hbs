<h1>Public Entries!</h1>
<div class="row">
    {{#each stories}}
    <div class="col s12 m4">
        <div class="card">
            <div class="card-image">
                {{!-- gonna fix this shit later, bitch ass cunt ass dick babies. --}}
            </div>
            <div class="card-content center-align">
                <h5>{{title}}</h5>
                <p>{{stripTags (truncate body 150)}}</p>
                <br>
                <div class="chip"><img src="{{user.image}}" alt="">
                    <a href="/stories/user/{[user.id}}">{{user.displayName}}</a>
                </div>
            </div>
            <div class="card-action center-align">
                <a href="/stories/{{_id}}" class="btn green">Read more, why don't you?</a>
            </div>
        </div>
    </div>
    {{else}}
    <p>Nobody's posted anything, I guess!?</p>
    {{/each}}
</div>